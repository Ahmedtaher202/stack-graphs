set -e
cd "$(dirname "$0")/../stack-graphs"

if ! which cbindgen >/dev/null 2>/dev/null; then
    echo "Cannot find cbindgen!  Try `cargo install cbindgen`." >&2
    exit 1
fi

mkdir -p include
cbindgen > include/stack-graphs.h
